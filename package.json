{
  "name": "chrome-ext-typescript-starter",
  "version": "1.0.0",
  "description": "Baseline for a chrome extension in TypeScript",
  "scripts": {
    "build": "parcel build src/ts/main.ts -d build/dist/ -o main.js",
    "test": "jest",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "author": "Bastian Stein",
  "license": "ISC",
  "devDependencies": {
    "parcel-bundler": "~1.9.7",
    "typescript": "~3.0.3",
    "tslint": "~5.11.0",
    "jest": "~23.5.0",
    "@types/jest": "~23.3.1",
    "ts-jest": "~23.1.4"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": ["**/__tests__/*.+(ts|tsx|js)"]
  }
}
