{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "build",
    "jest"
  ]
}